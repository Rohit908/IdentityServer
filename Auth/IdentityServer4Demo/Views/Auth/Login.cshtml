
@model LoginViewModel

<form asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div>
        <label>
            Username: 
        </label>
        <input asp-for="Username" />
    </div>
    <div>
        <label>
            Password: 
        </label>
        <input asp-for="Password" />
    </div>
    <div>
        <input type="submit" value="Login" />
    </div>
</form>